        glVertex2f(-0.84f+a, 0.38f+b);

        glVertex2f(-0.86f+a, 0.36f+b);





    glEnd();



     glBegin(GL_POLYGON);

for(int i=0;i<200;i++)

        {

            glColor3ub(30, 132, 73);

            float pi=3.1416;

            float A=(i*2*pi)/200;

            float r=0.075;

            float x = r * cos(A);

            float y = r * sin(A);

            glVertex2f(x-0.97+a,y+0.48+b);

        }

glEnd();

