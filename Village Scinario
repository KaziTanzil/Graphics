            float r=0.056;

            float x = r * cos(A);

            float y = r * sin(A);

            glVertex2f(x-39+a,y+0.80);

        }

glEnd();



 glBegin(GL_POLYGON);// Draw a Red 1x1 Square centered at origin

for(int i=0;i<200;i++)

        {

            glColor3ub(240, 243, 244);

            float pi=3.1416;

            float A=(i*2*pi)/200;

            float r=0.056;

            float x = r * cos(A);

            float y = r * sin(A);

            glVertex2f(x-0.34+a,y+0.76);

        }

glEnd();



 glBegin(GL_POLYGON);// Draw a Red 1x1 Square centered at origin

for(int i=0;i<200;i++)

        {

            glColor3ub(240, 243, 244);

            float pi=3.1416;

